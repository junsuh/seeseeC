#include <stdio.h>

int main(){

int a,b,c;


for(a=0;a<10;a++){
	printf("          ");
	for(b=0;b<a+1;b++){
		printf("*");
	}
	printf("\n");


}

for(a=0;a<10;a++){

	for(b=10;b>a;b--){
		printf(" ");
		
	}
	for(c=0;c<a+1;c++){
		printf("*");
	}
	printf("\n");
}

for(a=0;a<10;a++){

	for(b=10;b>a;b--){
		printf(" ");
		
	}
	for(c=0;c<2*a+1;c++){
		printf("*");
	}
	printf("\n");
}

for(a=0;a<10;a++){

	for(b=10;b>a;b--){
		printf(" ");
		
	}
	for(c=0;c<2*a+1;c++){
		printf("*");
	}
	printf("\n");
}

for(a=9;a>0;a--){
	for(b=9;b>a-2;b--){
		printf(" ");
	}
	for(c=0;c<2*a-1;c++){
		printf("*");
	
	}
	printf("\n");
}




while(1);








return 0;

}
